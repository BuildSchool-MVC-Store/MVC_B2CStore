@model OSLibrary.ViewModels.ProductDetail

@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container catcontent">
    <!--內容-->
    <div class="row">
        <!--左邊側邊欄-->
        <div class="col-2 side">
            @{Html.RenderAction("GetCategory");}
        </div>
        <div class="col right-content">
            <!-- 右邊主要內容 -->
            <div class="row">
                <div class="col-8">
                    <!--左圖片-->
                    @foreach (var item in Model.Image)
                    {
                        <img src="@item" />
                    }
                </div>
                <div class="col-4">
                    <!--右商品細節-->
                    <h4>@Model.Name</h4>
                    <p>
                        <span>@Model.Price</span>
                    </p>
                    <h5>Color</h5>
                    @foreach (var item in Model.Color)
                    {
                        <button type="button">@item</button>
                    }
                    <h5>Color</h5>
                    @foreach (var item in Model.Size)
                    {
                        <button type="button">@item</button>
                    }
                    <h5>Quantity</h5>
                    <div class="input-group">
                        <select class="custom-select ">
                            <option selected>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                        <div class="input-group-append">
                            <button class="btn" type="button">Add to ShoppingCart</button>
                        </div>
                    </div>
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home"
                               aria-selected="true">
                                <p>Information</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile"
                               aria-selected="false">
                                <p>Laundry Instruction</p>
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                            - 100% nylon
                            <br />- Made in Taiwan
                        </div>
                        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                            - Machine wash cold
                            <br />- Do not bleach
                            <br />- Do not tumble dry
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

