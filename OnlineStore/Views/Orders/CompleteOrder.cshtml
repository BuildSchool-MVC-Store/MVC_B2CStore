@model OSLibrary.ViewModels.OrderAndDetail

@{
    ViewBag.Title = "CompleteOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    p {
        margin: 0;
    }
</style>
<div class="container" style="margin-top: 160px;border-bottom: 2px solid rgb(174, 177, 182);">
    <!--內容-->
    <div class="row">
        <div class="col">
            <h5 class="step3">Choose the payment</h5>
        </div>
        <div class="col">
            <h5 class="step4">Complete the order</h5>
        </div>
    </div>
    <div class="row mt-3 ordernav">
        <div class="col">
            <p>訂單編號</p>
        </div>
        <div class="col">
            <p>訂單日期</p>
        </div>
        <div class="col">
            <p>總金額</p>
        </div>
        <div class="col">
            <p>訂單狀態</p>
        </div>
    </div>
    <div class="row ordernav_content">
        <div class="col">
            <p>@Model.OrderID </p>
        </div>
        <div class="col">
            <p>@Model.Order_Date.ToShortDateString()</p>
        </div>
        <div class="col">
            <p>
                <span class="price">@String.Format("{0:0,0}", @Model.TotalMoney)</span>
            </p>
        </div>
        <div class="col">
            <p>@Model.Order_Check </p>
        </div>
    </div>
    <div class="container" style="margin-top: 60px;">
        <div class="row mt-3 ordernav">
            <div class="col">
                <p>NO.</p>
            </div>
            <div class="col">
                <p>商品編號</p>
            </div>
            <div class="col">
                <p>商品名稱</p>
            </div>
            <div class="col">
                <p>尺寸</p>
            </div>
            <div class="col">
                <p>訂購數量</p>
            </div>
            <div class="col">
                <p>單價</p>
            </div>
            <div class="col">
                <p>小計</p>
            </div>
        </div>
        @for(var i = 0;i<Model.product.Count();i++)
        {
        <div class="row ordernav_content">
            <div class="col">
                <p>@(i + 1)</p>
            </div>
            <div class="col">
                <p>@Model.product[i].Product_ID</p>
            </div>
            <div class="col">
                <p>@Model.product[i].Product_Name</p>
            </div>
            <div class="col">
                <p>@Model.product[i].Size</p>
            </div>
            <div class="col">
                <p>@Model.product[i].Quantity</p>
            </div>
            <div class="col">
                <p class="price">@String.Format("{0:0,0}", Model.product[i].UnitPrice)</p>
            </div>
            <div class="col">
                <p class="price">@String.Format("{0:0,0}", Model.product[i].Price)</p>
            </div>
        </div>
        }

    </div>
    <div class="row mt-5 mb-5">
        <div class="col text-center">
            <a href="/Home" class="btn">Home</a>
        </div>
    </div>
</div>
