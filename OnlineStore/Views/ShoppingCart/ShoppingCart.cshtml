@model List<OSLibrary.ViewModels.ShoppingCartDetail>

@{
    ViewBag.Title = "ShoppingCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 160px;margin-bottom:100px;">
    <!--內容-->
    <div class="row">
        <div class="col">
            <h5 class="step1">Choose the payment</h5>
        </div>
        <div class="col">
            <h5 class="step2">Complete the order</h5>
        </div>
    </div>
    <div class="row mt-3 mb-3 navbar">
        <div class="col">
            <p>Shopping Cart</p>
        </div>
        <div class="col">

        </div>
        <div class="col">
            <p>數量</p>
        </div>
        <div class="col">
            <p>單價</p>
        </div>
        <div class="col">
            <p>小計</p>
        </div>
        <div class="col">
            <p>刪除</p>
        </div>
    </div>
    <div>

        @foreach (var item in Model)
        {
            <div class="row navbox">
                <div class="col">
                    <img src='~/Images/Products/@item.imgurl' alt='' />
                </div>
                <div class="col text-left">
                    <p>
                        商品名稱 :
                        <span>@item.Name</span>
                    </p>
                    <p>
                        商品貨號 :
                        <span>@item.ProductID</span>
                    </p>
                    <p>
                        尺寸：
                        <span>@item.Size</span>
                    </p>
                    <p>
                        顏色：
                        <span>@item.Color</span>
                    </p>
                </div>
                <div class="col" style="line-height: 170px">
                    <select name="quantity">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                    </select>
                </div>
                <div class="col" style="line-height: 170px">
                    <p>
                        NT$
                        <span>@item.UnitPrice</span>
                    </p>
                </div>
                <div class="col" style="line-height: 170px">
                    <p>
                        NT$
                        <span>@item.RowPrice</span>
                    </p>
                </div>
                <div class="col" style="line-height: 170px">
                    <a href="#">
                        <i class="far fa-trash-alt"></i>
                    </a>
                </div>
            </div>
        }
            
    </div>
    <div class="row mt-3 text-right">
        <div class="col-10">
            <p>金額：</p>
            <p>運費：</p>
            <p>總金額 : </p>
        </div>
        <div class="col">
            <p>
                NT$
                <span>@ViewBag.totalmoney</span>
            </p>
            <p>
                NT$
                <span>60</span>
            </p>
            <p>
                NT$
                <span>@(ViewBag.totalmoney+60) </span>
            </p>
        </div>
    </div>
    <div class="row mt-5 mb-3">
        <div class="col text-right">
            <p>運送方式 / Shipping</p>
        </div>
        <div class="col">
            <select id="inputState">
                <option selected>Choose...</option>
                <option>宅配</option>
                <option>超商取貨</option>
            </select>
        </div>
        <div class="col text-right">
            <p>付款方式 / Payment</p>
        </div>
        <div class="col">
            <select id="inputState">
                <option selected>Choose...</option>
                <option>貨到付款</option>
                <option>超商取貨付款</option>
            </select>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col text-right">
            <a href="#" class="btn">繼續購物</a>
        </div>
        <div class="col">

        </div>
        <div class="col">
            <a href="#" class="btn">確定訂購</a>
        </div>
    </div>
</div>