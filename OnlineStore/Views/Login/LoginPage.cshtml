@model OnlineStore.Models.LoginModel

@{
    Layout = null;
}
@if (ViewBag.IsAuthenticated)
{
    <ul class="nav justify-content-end topside">
        <li class="nav-item">
            <a href="#" class="nav-link">Hi,@ViewBag.Username</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("Logout","Login")" class="nav-link">LOGOUT</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">
                <i class="fas fa-user"></i>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">
                <i class="fas fa-shopping-basket"></i>
            </a>
        </li>
    </ul>
}
else
{
    <ul class="nav justify-content-end topside">
        <li class="nav-item">
            <a class="nav-link" data-toggle="modal" data-target="#signinmodel">LOGIN</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="modal" data-target="#registermodel">REGISTER</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">
                <i class="fas fa-user"></i>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">
                <i class="fas fa-shopping-basket"></i>
            </a>
        </li>
    </ul>
}