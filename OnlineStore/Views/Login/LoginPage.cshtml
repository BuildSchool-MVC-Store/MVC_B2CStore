@model OnlineStore.Models.LoginModel

@{
    Layout = null;
}
@if (ViewBag.IsAuthenticated)
{
    <li>
        <p>@ViewBag.Username</p>
    </li>

    <li>
        <a href="@Url.Action("Logout","Login")">Sign Out</a>
    </li>
}
else
{
    <li>
        <a data-toggle="modal" data-target="#signinmodel" style="cursor:pointer;">Sign in</a>
    </li>
    <li>
        <a data-toggle="modal" data-target="#registermodel" style="cursor:pointer;">Sign up</a>
    </li>
}