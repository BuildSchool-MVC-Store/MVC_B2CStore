@model OnlineStore.Models.LoginModel

@{
    Layout = null;
}
@if (ViewBag.IsAuthenticated)
{
    <ul class="nav justify-content-end topside">
        <li class="nav-item">
            <a class="nav-link" data-toggle="modal">Hi , @ViewBag.Username</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Logout","Login")">Sign Out</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">
                <i class="fas fa-user"></i>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("ShoppingCart","ShoppingCart")">
                <i class="fas fa-shopping-basket"></i>
            </a>
        </li>
    </ul>

}
else
{
    <ul class="nav justify-content-end topside">
        <li class="nav-item">
            <a class="nav-link" data-toggle="modal" data-target="#signinmodel" style="cursor:pointer;">Sign in</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="modal" data-target="#registermodel" style="cursor:pointer;">Sign up</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">
                <i class="fas fa-user"></i>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("ShoppingCart","ShoppingCart")">
                <i class="fas fa-shopping-basket"></i>
            </a>
        </li>
    </ul>
}