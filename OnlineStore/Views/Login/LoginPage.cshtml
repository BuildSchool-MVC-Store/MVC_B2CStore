@model OnlineStore.Models.LoginModel

@{
    Layout = null;
}
@if (ViewBag.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link">Hi , @ViewBag.Username</a>
    </li>

    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Logout","Login")">Sign Out</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" data-toggle="modal" data-target="#signinmodel" style="cursor:pointer;">Sign in</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="modal" data-target="#registermodel" style="cursor:pointer;">Sign up</a>
    </li>
}