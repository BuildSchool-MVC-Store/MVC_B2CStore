
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="margin-top:200px">
    @if (ViewBag.IsAuthenticated)
    {

        <h2>Hi , @ViewBag.Username</h2>
        <p><a href="@Url.Action("Logout","Login")" class="btn btn-danger btn-block" >登出</a> </p>
    }
    else
    {
        <h2>會員登入</h2>

        using (Html.BeginForm())
        {
            <p>使用者名稱 : <input type="text" class="form-control" maxlength="25" name="Username" /> </p>
            <p>密碼 : <input type="password" class="form-control" maxlength="25" name="Password" /> </p>
            <p><button type="submit">登入</button></p>
        }
    }

</div>