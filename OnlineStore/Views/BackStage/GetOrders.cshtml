@model IEnumerable<OSLibrary.Models.Orders>

@{
    ViewBag.Title = "GetOrders";
    Layout = "~/Views/Shared/_LayoutBackStagePage.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="breadcrumb-holder">
                <h1 class="main-title float-left">Orders</h1>
                <ol class="breadcrumb float-right">
                    <li class="breadcrumb-item">Home</li>
                    <li class="breadcrumb-item">Orders</li>
                    <li class="breadcrumb-item active">Orders</li>
                </ol>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!-- end row -->
    <div class="row">

        <div class="col">
            <div class="card mb-3 mt-3">
                <div class="card-header">
                    <h3>
                        <i class="far fa-file"></i> Orders
                    </h3>
                </div>

                <div class="card-body">

                    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="pills-allorders-tab" data-toggle="pill" href="#pills-allorders" role="tab" aria-controls="pills-allorders"
                               aria-selected="true">所有訂單</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="pills-setup-tab" data-toggle="pill" href="#pills-setup" role="tab" aria-controls="pills-setup" aria-selected="false">剛成立的訂單</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="pills-processing-tab" data-toggle="pill" href="#pills-processing" role="tab" aria-controls="pills-processing"
                               aria-selected="false">處理中的訂單</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="pills-shipped-tab" data-toggle="pill" href="#pills-shipped" role="tab" aria-controls="pills-shipped"
                               aria-selected="false">已出貨的訂單</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="pills-complete-tab" data-toggle="pill" href="#pills-complete" role="tab" aria-controls="pills-complete"
                               aria-selected="false">已完成的訂單</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-allorders" role="tabpanel" aria-labelledby="pills-allorders-tab">

                            <table id="allorders" class="table table-bordered table-responsive-xl table-hover display">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>Account</th>
                                        <th>Order Date</th>
                                        <th>Status</th>
                                        <th>Ship Date</th>
                                        <th>Total</th>
                                        <th>Delivery Method</th>
                                        <th>Payment Method</th>
                                        <th>Update</th>
                                        <th>Delete</th>
                                        <th>Skip</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Order_ID</td>
                                            <td>@item.Account</td>
                                            <td>
                                                @item.Order_Date
                                            </td>
                                            <td>
                                                @item.Order_Check
                                            </td>
                                            <td>
                                                -
                                            </td>
                                            <td class="text-right">
                                                @String.Format("{0:0,0}", @item.Total)

                                            </td>
                                            <td>
                                                @item.Pay
                                            </td>
                                            <td>
                                                @item.Transport
                                            </td>
                                            <td>
                                                <a class="btn btn-warning btn-sm" href="updateOrders.html" role="button">
                                                    <i class="far fa-edit"></i>
                                                </a>
                                            </td>
                                            <td>
                                                <a class="btn btn-danger btn-sm" id="del" href="#" role="button">
                                                    <i class="far fa-trash-alt"></i>
                                                </a>
                                            </td>
                                            <td>
                                                <a class="btn btn-sm" href="#" style="background-color:rgb(122, 209, 173)" role="button" id="skip">
                                                    <i class="fas fa-arrow-right" style="color:white"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end card-->
        </div>
    </div>
</div>

