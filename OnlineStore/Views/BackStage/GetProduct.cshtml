@model OSLibrary.Models.Products

@{
    ViewBag.Title = "GetProduct";
    Layout = "~/Views/Shared/_LayoutBackStagePage.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="breadcrumb-holder">
                <h1 class="main-title float-left">Update Product</h1>
                <ol class="breadcrumb float-right">
                    <li class="breadcrumb-item">Home</li>
                    <li class="breadcrumb-item">Products</li>
                    <li class="breadcrumb-item active">Update Product</li>
                </ol>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!-- end row -->
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
            <a class="btn mb-3" style="background-color:#4980B5;color:#fff;" href="@Url.Action("GetProducts")" role="button"><i class="fas fa-reply"></i>&nbsp;Back</a>

            <div class="card mb-3">
                <div class="card-header">
                    <h3>
                        <i class="far fa-edit"></i> Update Product
                    </h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("UpdateProduct", "BackStage"))
                    {
                        <div class="form-group">
                            <label>Product Name</label>
                            <input type="text" name="Product_Name" value="@Model.Product_Name" data-parsley-trigger="change" required placeholder="Enter Product Name" class="form-control" id="">
                        </div>
                        <div class="form-group">
                            <label>Gender</label>
                            <select class="form-control" name="Gender">
                                <option value="WOMEN">WOMEN</option>
                                <option value="MEN">MEN</option>
                                <option value="KIDS">KIDS</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Category</label>
                            <select class="form-control" name="CategoryName">
                                <option value="TOP">TOP</option>
                                <option value="BOTTOM">BOTTOM</option>
                                <option value="JUMPSUIT">JUMPSUIT</option>
                                <option value="UNDERWEAR">UNDERWEAR</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>UnitPrice</label>
                            <input type="text" name="UnitPrice" value="@Model.UnitPrice" data-parsley-trigger="change" required placeholder="Enter UnitPrice" class="form-control" id="">
                        </div>
                        <div class="form-group">
                            <label>Status</label>
                            <select class="form-control" name="Online">
                                <option value="YES">上架中</option>
                                <option value="NO"> 已下架</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Textarea</label>
                            <div>
                                <textarea required class="form-control" name="Comments">@Model.Comments</textarea>
                            </div>
                        </div>

                        <div class="form-group text-right m-b-0">
                            <input type="hidden" name="Product_ID" value="@Model.Product_ID" />
                            <button class="btn btn-primary" type="submit">
                                Submit
                            </button>
                            <button type="reset" class="btn btn-secondary m-l-5">
                                Cancel
                            </button>
                        </div>
                    }
                </div>
            </div>
            <!-- end card-->
        </div>

    </div>


</div>
<script>
    $(function () {
        $('select[name=Gender]').val("@Model.Gender");
        $('select[name=CategoryName]').val("@Model.CategoryName");
        $('select[name=Online]').val("@Model.Online");

        if ("@TempData["UpdateProduct"]" != null) {
            if (@TempData["UpdateProduct"] == 1) {
                swal("success", "Update Product Success", "success")
            }
            else {
                swal("error", "Update Product false", "error")
            }
        }
    });

</script>
