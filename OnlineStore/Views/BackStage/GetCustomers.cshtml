@model IEnumerable<OSLibrary.Models.Customers>

@{
    ViewBag.Title = "GetCustomers";
    Layout = "~/Views/Shared/_LayoutBackStagePage.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="breadcrumb-holder">
                <h1 class="main-title float-left">Customer details</h1>
                <ol class="breadcrumb float-right">
                    <li class="breadcrumb-item">Home</li>
                    <li class="breadcrumb-item">Customers</li>
                    <li class="breadcrumb-item active">Customer details</li>
                </ol>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!-- end row -->
    <div class="row">

        <div class="col">
            <div class="card mb-3 mt-3">
                <div class="card-header">
                    <h3>
                        <i class="fa fa-users"></i> Customer details
                    </h3>
                </div>

                <div class="card-body">

                    <table id="example1" class="table table-bordered table-responsive-xl table-hover display text-center">
                        <thead>
                            <tr>
                                <th>Account</th>
                                <th>Name</th>
                                <th>Birthday</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>Search Orders</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Account</td>
                                <td>@item.Name</td>
                                <td>@item.Birthday.ToShortDateString()</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.Address</td>
                                <td>
                                    <a class="btn btn-info btn-sm" href="@Url.Action("GetOrders","BackStage",new { Account = item.Account})" role="button">
                                        <i class="fas fa-search"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- end card-->
        </div>
    </div>
</div>