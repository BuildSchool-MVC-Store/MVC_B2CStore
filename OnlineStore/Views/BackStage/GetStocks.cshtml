@model IEnumerable<OSLibrary.ViewModels.StockDetail>

@{
    ViewBag.Title = "GetStocks";
    Layout = "~/Views/Shared/_LayoutBackStagePage.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="breadcrumb-holder">
                <h1 class="main-title float-left">Stock details</h1>
                <ol class="breadcrumb float-right">
                    <li class="breadcrumb-item">Home</li>
                    <li class="breadcrumb-item">Stocks</li>
                    <li class="breadcrumb-item active">Stock details</li>
                </ol>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!-- end row -->
    <div class="row">

        <div class="col">
            <div class="card mb-3 mt-3">
                <div class="card-header">
                    <span class="pull-right">
                        <a href="createProducts.html" class="btn btn-primary btn-sm mr-3">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                        </a>
                    </span>
                    <h3>
                        <i class="fas fa-boxes"></i> Stock details
                    </h3>
                </div>

                <div class="card-body">

                    <table id="example1" class="table table-bordered table-responsive-xl table-hover display">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Product Name</th>
                                <th>Size</th>
                                <th>Quantity</th>
                                <th>color</th>
                                <th>Update</th>
                                <th>Stock</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Product_ID</td>
                                <td>@item.Product_Name</td>
                                <td>@item.Color</td>
                                <td>@item.Size</td>
                                <td>@item.Quantity</td>
                                <td>
                                    <a class="btn btn-warning btn-sm" href="updateStocks.html" role="button">
                                        <i class="far fa-edit"></i>
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-success btn-sm" href="#" role="button">
                                        <i class="fas fa-boxes"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- end card-->
        </div>
    </div>
</div>


@if (TempData["Message"] != null)
{
    <script type="text/javascript">
            $(document).ready(function () {
                let message = @Html.Raw(Json.Encode(TempData["Message"]));
                $('#addQuantity p').html(message);
                $('#addQuantity').modal();

            });

        TempData.Remove("Message");
    </script>
}
