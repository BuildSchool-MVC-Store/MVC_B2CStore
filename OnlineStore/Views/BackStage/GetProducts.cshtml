@model IEnumerable<OSLibrary.Models.Products>

@{
    ViewBag.Title = "GetProducts";
    Layout = "~/Views/Shared/_LayoutBackStagePage.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="breadcrumb-holder">
                <h1 class="main-title float-left">Product details</h1>
                <ol class="breadcrumb float-right">
                    <li class="breadcrumb-item">Home</li>
                    <li class="breadcrumb-item">Products</li>
                    <li class="breadcrumb-item active">Product details</li>
                </ol>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!-- end row -->
    <div class="row">

        <div class="col">
            <div class="card mb-3 mt-3">
                <div class="card-header">
                    <span class="pull-right">
                        <a href="createProducts.html" class="btn btn-primary btn-sm mr-3">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                        </a>
                    </span>
                    <h3>
                        <i class="fas fa-box"></i> Product details
                    </h3>
                </div>

                <div class="card-body">

                    <table id="example1" class="table table-bordered table-responsive-xl table-hover display">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Product Name</th>
                                <th>Gender</th>
                                <th>Category</th>
                                <th style="width:5%">Unitprice</th>
                                <th>Status</th>
                                <th>Stock</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Product_ID</td>
                                    <td>@item.Product_Name</td>
                                    <td>@item.Gender</td>
                                    <td>@item.CategoryName</td>
                                    <td style="text-align:right"><p class="price"> @String.Format("{0:0,0}", (decimal)item.UnitPrice)</p></td>
                                    @if (item.Online == "YES")
                                    {
                                        <td><i style="color:#006DC0; font-size:25px" class="fas fa-check-circle"></i></td>
                                    }
                                    else
                                    {
                                        <td><i style="color:red ; font-size:26px" class="fas fa-2x fa-times-circle"></i></td>
                                    }
                                    <td>
                                        <a class="btn btn-success btn-sm" href="#" role="button">
                                            <i class="fas fa-boxes"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a class="btn btn-warning btn-sm" href="updateProducts.html" role="button">
                                            <i class="far fa-edit"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger btn-sm" id="del" href="#">
                                            <i class="far fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- end card-->
        </div>
    </div>
</div>

