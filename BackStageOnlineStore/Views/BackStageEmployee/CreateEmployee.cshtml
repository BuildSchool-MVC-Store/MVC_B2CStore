@model OSLibrary.ViewModels.EmployeeModel
@{
    ViewBag.Title = "CreateEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Home")">主頁</a>
    </li>
    <li class="breadcrumb-item">
        <a href="@Url.Action("SelectEmployee","BackStageEmployee")">員工</a>
    </li>
    <li class="breadcrumb-item active">新增員工資料</li>
</ol>
<div class="row">
    <div class="col-12">
        <h4 class="mt-2">新增員工資料</h4>
        <div class="container-fluid">
            <div class="row">
                <div class="col-6">
                    <div class="container mt-5 text-left">
                        @using (Html.BeginForm("CreateSingle", "BackStageEmployee"))
                        {
                        <div class="row">
                            <div class="col-4 mt-2 ">
                                <b>@Html.DisplayNameFor(model=>model.Name)</b>
                            </div>
                            <div class="col">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @type = "text", @name = "Name"})
                                @Html.ValidationMessageFor(model=>model.Name, null, new { @class = "text-danger"})
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4 mt-2">
                                <b>@Html.DisplayNameFor(model => model.Account)</b>
                            </div>
                            <div class="col">
                                @Html.TextBoxFor(model => model.Account, new { @class = "form-control", @type = "text", @name = "Account" })
                                @Html.ValidationMessageFor(model => model.Account, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4 mt-2">
                                <b>@Html.DisplayNameFor(model => model.Password)</b>
                            </div>
                            <div class="col">
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "Password", @name = "Password" })
                                @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4 mt-2">
                                <b>@Html.DisplayNameFor(model => model.Birthday)</b>
                            </div>
                            <div class="col">
                                @Html.TextBoxFor(model => model.Birthday, new { @class = "form-control", @type = "text", @name = "Birthday" })
                                @Html.ValidationMessageFor(model => model.Birthday, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4  mt-2">
                                <b>@Html.DisplayNameFor(model => model.Email)</b>
                            </div>
                            <div class="col">
                                @Html.TextBoxFor(model=>model.Email, new { @class = "form-control", @type = "text", @name = "Birthday" })
                                @Html.ValidationMessageFor(model=>model.Email, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mt-3">

                            <div class="col-4  mt-2">
                                <b>@Html.DisplayNameFor(model => model.Phone)</b>
                            </div>
                            <div class="col">
                                @Html.TextBoxFor(model=>model.Phone, new { @class = "form-control", @type = "text", @name = "Phone" })
                                @Html.ValidationMessageFor(model=>model.Phone, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4  mt-2">
                                <b>@Html.DisplayNameFor(model => model.Address)</b>
                            </div>
                            <div class="col">
                                @Html.TextBoxFor(model=>model.Address, new { @class = "form-control", @type = "text", @name = "Phone" })
                                @Html.ValidationMessageFor(model=>model.Address, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col text-center">
                                <a class="btn btn-secondary btn-block" href="@Url.Action("SelectEmployee", "BackStageEmployee")">取消</a>
                            </div>
                            <div class="col text-center bmr">
                                <button class="btn btn-success btn-block" type="submit">儲存</button>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

