
@{
    ViewBag.Title = "UpdateStock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("SelectStock","Stock")">庫存</a>
    </li>
    <li class="breadcrumb-item active">商品庫存修改</li>
</ol>
<div class="row">
    <div class="col-12">
        <h4 class="mt-2">商品庫存修改</h4>
        <div class="container-fluid">

        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-6">
                    <div class="container mt-5 text-left">

                        <div class="row">

                            <div class="col-4 mt-2 ">
                                <b>商品編號</b>
                            </div>
                            <div class="col">
                                <input class="form-control" aria-describedby="basic-addon1" type="text" readonly>
                            </div>

                        </div>
                        <div class="row mt-3  ">

                            <div class="col-4 mt-2 ">
                                <b>商品名稱</b>
                            </div>
                            <div class="col">
                                <input class="form-control" aria-describedby="basic-addon1" type="text" readonly>
                            </div>

                        </div>

                        <div class="row mt-3">
                            <div class="col-4 mt-2">
                                <b>尺寸</b>
                            </div>
                            <div class="col">
                                <select class="form-control">
                                    <option value="XS">XS</option>
                                    <option value="S">S</option>
                                    <option value="M">M</option>
                                    <option value="X">X</option>
                                    <option value="XL">XL</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mt-3 ">
                            <div class="col-4 mt-2">
                                <b>顏色</b>
                            </div>
                            <div class="col">
                                <input class="form-control" aria-describedby="basic-addon2" type="text">
                            </div>
                        </div>
                        <div class="row mt-3 ">
                            <div class="col-4 mt-2">
                                <b>數量</b>
                            </div>
                            <div class="col">
                                <input class="form-control" aria-describedby="basic-addon2" type="text">
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col text-center">
                                <a class="btn btn-secondary btn-block" href="@Url.Action("SelectStock","BackStageStock")">取消</a>
                            </div>
                            <div class="col text-center bmr">
                                <a class="btn btn-success btn-block" href="#">儲存</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
