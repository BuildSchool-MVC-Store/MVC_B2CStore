@model OSLibrary.ViewModels.StockModel
@{
    ViewBag.Title = "UpdateStock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("SelectStock","Stock")">庫存</a>
    </li>
    <li class="breadcrumb-item active">商品庫存修改</li>
</ol>
<div class="row">
    <div class="col-12">
        <h4 class="mt-2">商品庫存修改</h4>
        <div class="container-fluid">
            <div class="row">
                <div class="col-6">
                    @using (Html.BeginForm("UpdateStock", "BackStageStock"))
                    {
                    <div class="container mt-5 text-left">
                        <div class="row">
                            <div class="col-4 mt-2 ">
                                <b>@Html.DisplayNameFor(model=>model.Product_ID)</b>
                            </div>
                            <div class="col">
                                <input class="form-control" aria-describedby="basic-addon1" type="text" readonly value="@Model.Product_ID">
                            </div>
                        </div>
                        <div class="row mt-3  ">
                            <div class="col-4 mt-2 ">
                                <b>@Html.DisplayNameFor(model=>model.ProductName)</b>
                            </div>
                            <div class="col">
                                <input class="form-control" aria-describedby="basic-addon1" type="text" readonly value="@Model.ProductName">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4 mt-2">
                                <b>@Html.DisplayNameFor(model=>model.Size)</b>
                            </div>
                            <div class="col">
                                <select class="form-control">
                                    <option value="XS">XS</option>
                                    <option value="S">S</option>
                                    <option value="M">M</option>
                                    <option value="X">X</option>
                                    <option value="XL">XL</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mt-3 ">
                            <div class="col-4 mt-2">
                                <b>@Html.DisplayNameFor(model=>model.Color)</b>
                            </div>
                            <div class="col">
                                <input class="form-control" aria-describedby="basic-addon2" type="text" readonly value="@Model.Color">
                            </div>
                        </div>
                        <div class="row mt-3 ">
                            <div class="col-4 mt-2">
                                <b>@Html.DisplayNameFor(model=>model.Quantity)</b>
                            </div>
                            <div class="col">
                                <input class="form-control" aria-describedby="basic-addon2" type="text" value="@Model.Quantity">
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col text-center">
                                <a class="btn btn-secondary btn-block" href="@Url.Action("SelectStock", "BackStageStock")">取消</a>
                            </div>
                            <div class="col text-center bmr">
                                <a class="btn btn-success btn-block" href="#">儲存</a>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
