@model IEnumerable<OSLibrary.ViewModels.StockModel>
@{
    ViewBag.Title = "SelectStock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Home")">主頁</a>
    </li>
    <li class="breadcrumb-item active">庫存</li>
</ol>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> 庫存資料
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>編號</th>
                        <th>名稱</th>
                        <th>尺寸</th>
                        <th>顏色</th>
                        <th>庫存</th>
                        <th>修改</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>編號</th>
                        <th>名稱</th>
                        <th>尺寸</th>
                        <th>顏色</th>
                        <th>庫存</th>
                        <th>修改</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product_ID</td>
                            <td>@item.ProductName</td>
                            <td>@item.Size</td>
                            <td>@item.Color</td>
                            <td>@item.Quantity</td>
                            <td>
                                <a href="/Stock/UpdateStock/@item.Product_ID/@item.Size/@item.Color">
                                    <i class="far fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>

</div>

