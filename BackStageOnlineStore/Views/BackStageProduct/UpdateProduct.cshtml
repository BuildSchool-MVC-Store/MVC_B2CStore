
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Home")">主頁</a>
    </li>
    <li class="breadcrumb-item">
        <a href="@Url.Action("SelectProduct","BackStageProduct")">商品</a>
    </li>
    <li class="breadcrumb-item active">修改商品資料</li>
</ol>
<div class="row">
    <div class="col-12">
        <h4 class="mt-2">修改商品資料</h4>
        <div class="container-fluid">
            <div class="row">
                <div class="col-6">
                    <div class="container mt-5 text-left">
                        <div class="row  ">

                            <div class="col-4 mt-2 ">
                                <b>商品名稱</b>
                            </div>
                            <div class="col">
                                <input class="form-control" aria-describedby="basic-addon1" type="text">
                            </div>

                        </div>
                        <div class="row mt-3  ">

                            <div class="col-4  mt-2">
                                <b>價格</b>
                            </div>
                            <div class="col">
                                <input class="form-control" aria-describedby="basic-addon2" type="text">
                            </div>

                        </div>
                        <div class="row mt-3  ">

                            <div class="col-4  mt-2">
                                <b>性別</b>
                            </div>
                            <div class="col">
                                <select class="form-control">
                                    <option value="WOMEN">WOMEN</option>
                                    <option value="MEN">MEN</option>
                                    <option value="KIDS">KIDS</option>
                                </select>

                            </div>

                        </div>
                        <div class="row mt-3  ">

                            <div class="col-4  mt-2">
                                <b>種類</b>
                            </div>
                            <div class="col">
                                <select class="form-control">
                                    <option value="TOP">TOP</option>
                                    <option value="BOTTOM">BOTTOM</option>
                                    <option value="JUMPSUIT">JUMPSUIT</option>
                                    <option value="UNDERWEAR">UNDERWEAR</option>
                                </select>
                            </div>

                        </div>
                        <div class="row mt-3  ">

                            <div class="col-4  mt-2">
                                <b>顯示</b>
                            </div>
                            <div class="col">
                                <select class="form-control">
                                    <option value="上架中">上架中</option>
                                    <option value="已下架">已下架</option>
                                </select>
                            </div>

                        </div>
                        <div class="row mt-3  ">

                            <div class="col-4  mt-2">
                                <b>備註 ( 資訊 )</b>
                            </div>
                            <div class="col">
                                <textarea class="form-control" name="message" style=" height:150px;"></textarea>
                            </div>

                        </div>

                        <div class="row mt-4  ">
                            <div class="col text-center">
                                <a class="btn btn-secondary btn-block" href="@Url.Action("SelectProduct","BackStageProduct")">取消</a>
                            </div>
                            <div class="col text-center bmr">
                                <a class="btn btn-success btn-block" href="#">儲存</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

