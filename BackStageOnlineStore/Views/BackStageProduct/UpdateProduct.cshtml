@model OSLibrary.ViewModels.ProductModel
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Home")">主頁</a>
    </li>
    <li class="breadcrumb-item">
        <a href="@Url.Action("SelectProduct","BackStageProduct")">商品</a>
    </li>
    <li class="breadcrumb-item active">修改商品資料</li>
</ol>
<div class="row">
    <div class="col-12">
        <h4 class="mt-2">修改商品資料</h4>
        <div class="container-fluid">
            <div class="row">
                <div class="col-6">
                    <div class="container mt-5 text-left">
                        @using (Html.BeginForm("Update", "BackStageProduct"))
                        {
                            <div class="row mt-3">
                                <div class="col-4 mt-2 ">
                                    <b>@Html.DisplayNameFor(model => model.ProductID)</b>
                                </div>
                                <div class="col">
                                    <input class="form-control" aria-describedby="basic-addon1" type="text" value="@Model.ProductID" name="Product_ID" readonly>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-4 mt-2 ">
                                    <b>@Html.DisplayNameFor(model => model.Name)</b>
                                </div>
                                <div class="col">
                                    <input class="form-control" aria-describedby="basic-addon2" type="text" value="@Model.Name" name="ProductName" readonly>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-4 mt-2">
                                    <b>@Html.DisplayNameFor(model => model.Price)</b>
                                </div>
                                <div class="col">
                                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @name = "Price" })
                                    @Html.ValidationMessageFor(model => model.Price, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-4 mt-2">
                                    <b>@Html.DisplayNameFor(model => model.Gender)</b>
                                </div>
                                <div class="col">
                                    <select class="form-control" name="Gender">
                                        <option value="WOMEN" name="WOMEN">WOMEN</option>
                                        <option value="MEN" name="MEN">MEN</option>
                                        <option value="KIDS" name="KIDS">KIDS</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-4 mt-2">
                                    <b>@Html.DisplayNameFor(model => model.CategoryName)</b>
                                </div>
                                <div class="col">
                                    <select class="form-control" name="CategoryName">
                                        <option value="TOP" name="TOP">TOP</option>
                                        <option value="BOTTOM" name="BOTTOM">BOTTOM</option>
                                        <option value="JUMPSUIT" name="JUMPSUIT">JUMPSUIT</option>
                                        <option value="UNDERWEAR" name="UNDERWEAR">UNDERWEAR</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-4 mt-2">
                                    <b>@Html.DisplayNameFor(model => model.Online)</b>
                                </div>
                                <div class="col">
                                    <select class="form-control" name="Online">
                                        <option value="上架中" name="上架中">上架中</option>
                                        <option value="已下架" name="已下架">已下架</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-4 mt-2">
                                    <b>@Html.DisplayNameFor(model => model.Comments)</b>
                                </div>
                                <div class="col">
                                    <textarea class="form-control" name="Comments" style="height:150px;"></textarea>
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col text-center">
                                    <a class="btn btn-secondary btn-block" href="@Url.Action("SelectProduct","BackStageProduct")">取消</a>
                                </div>
                                <div class="col text-center bmr">
                                    <button class="btn btn-success btn-block" type="submit">儲存</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

