@model IEnumerable<OSLibrary.Models.Orders>
@{
    ViewBag.Title = "SelectOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item ">
        <a href="@Url.Action("SelectOrder","BackStageOrder")">查詢訂單</a>
    </li>
    <li class="breadcrumb-item">
        <a href="@Url.Action("CreateOrder","BackStageOrder")">新增訂單</a>
    </li>
</ol>
<!-- Example DataTables Card-->

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> 查詢訂單
    </div>
    <div class="row mt-1">
        <div class="col">
            <div class="input-group ">
                <select class="custom-select" id="inputGroupSelect">
                    <option selected>全部訂單</option>
                    <option value="1">訂單編號</option>
                    <option value="2">會員帳號</option>
                    <option value="3">訂單狀態(備貨中)</option>
                    <option value="4">訂單狀態(未出貨)</option>
                    <option value="5">訂單狀態(已出貨)</option>
                </select>
                <div class="input-group-append">
                    <input type="text" class="input_search">
                    <button class="btn btn-outline-secondary fa fa-search" type="button"></button>
                </div>
            </div>
        </div>
        <div class="col">
        </div>
    </div>
    <div class="row mt-1">
        <div class="col">
            <div class="input-group ">
                <select class="custom-select">
                    <option selected>訂單日期</option>
                    <option value="1">出貨日期</option>
                </select>
                <input type="date" class="form-control" id="StartDate ">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary fa fa-angle-right" type="button" disabled></button>
                </div>
                <input type="date" class="form-control" id="EndDate ">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary fa fa-search" type="button"></button>
                </div>
            </div>
        </div>
        <div class="col">
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>訂單編號</th>
                        <th>會員帳號</th>
                        <th>訂單日期</th>
                        <th>訂單狀態</th>
                        <th>出貨日期</th>
                        <th>總價</th>
                        <th>付款方式</th>
                        <th>運送方式</th>
                        <th>修改</th>
                        <th>刪除</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
    {
                <tr>
                    <td>@item.Order_ID</td>
                    <td>@item.Account</td>
                    <td>
                        @item.Order_Date
                    </td>
                    <td>
                        <select>
                            <option value="">備貨中</option>
                            <option value="">已出貨</option>
                            <option value="">已取貨</option>
                        </select>
                    </td>
                    <td>
                        2018/05/25
                    </td>
                    <td>
                        @item.Total
                    </td>
                    <td>
                        <select>
                            <option value="">貨到付款</option>
                            <option value="">超商取貨付款</option>
                        </select>
                    </td>
                    <td>
                        <select>
                            <option value="">宅配</option>
                            <option value="">超商取貨</option>
                        </select>
                    </td>
                    <td class="text-center">
                        <a href="#" style="color:#000">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                    </td>
                    <td class="text-center">
                        <a href="#" style="color:#000">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
}
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>

