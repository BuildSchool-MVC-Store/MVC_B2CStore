
@{
    ViewBag.Title = "SelectOrderDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Home")">主頁</a>
    </li>
    <li class="breadcrumb-item active">訂單明細</li>
</ol>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> 訂單明細

    </div>
    <div class="card-body">

        <div class="table-responsive">

            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                <thead>
                    <tr>
                        <th>選取</th>
                        <th>訂單編號</th>
                        <th>產品編號</th>
                        <th>產品名稱</th>
                        <th>數量</th>
                        <th>價錢</th>
                        <th>折扣</th>
                        <th>尺寸</th>
                        <th>顏色</th>
                        <th style=" width:35px">修改</th>
                        <th style=" width:35px">刪除</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                            </div>
                        </td>
                        <td>XXXXXXXX</td>
                        <td>006</td>
                        <td>66</td>
                        <td>6</td>
                        <td>$ 666</td>
                        <td>$ 66</td>
                        <td>S</td>
                        <td>6666666</td>
                        <td class="text-center">
                            <a href="@Url.Action("UpdateOrderDetails","BackStageOrder")">
                                <i class="fas fa-pencil-alt" style="color:#000"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a href="#">
                                <i class="fas fa-trash-alt" style="color:#000"></i>
                            </a>
                        </td>
                    </tr>
                </tbody>

            </table>

        </div>
        <div class="mt-2" style=" padding-left: 15px;">
            <a href="@Url.Action("CreateOrderDetails","BackStageOrder")">
                <i class="fas fa-plus " style="font-size:1.5em; color:darkseagreen"></i>
            </a>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>

</div>

