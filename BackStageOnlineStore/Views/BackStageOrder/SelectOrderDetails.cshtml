@model IEnumerable<OSLibrary.ViewModels.OrderDetailsModel>
@{
    ViewBag.Title = "SelectOrderDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Home")">主頁</a>
    </li>
    <li class="breadcrumb-item active">訂單明細</li>
</ol>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> 訂單明細
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>訂單編號</th>
                        <th>產品編號</th>
                        <th>產品名稱</th>
                        <th>數量</th>
                        <th>價錢</th>
                        <th>折扣</th>
                        <th>尺寸</th>
                        <th>顏色</th>
                        <th style=" width:35px">修改</th>
                        <th style=" width:35px">刪除</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Order_ID</td>
                            <td>@item.Product_ID</td>
                            <td>@item.ProductName</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price</td>
                            <td>@item.Discount</td>
                            <td>@item.size</td>
                            <td>@item.Color</td>
                            <td class="text-center">
                                <a href="@Url.Action("UpdateOrderDetails","BackStageOrder")">
                                    <i class="fas fa-pencil-alt" style="color:#000"></i>
                                </a>
                            </td>
                            <td class="text-center">
                                <a href="#" id="trashcan" onclick="myFunction()">
                                    <i class="fas fa-trash-alt" style="color:#000"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="mt-2" style=" padding-left: 15px;">
            <a href="@Url.Action("CreateOrderDetails","BackStageOrder")">
                <i class="fas fa-plus " style="font-size:1.5em; color:darkseagreen"></i>
            </a>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
<script type="text/javascript">
    function myFunction() {
        var txt;
        if (confirm("確認刪除此訂單明細嗎？")) {
            txt = "刪除成功";
        } else {
            txt = "您已取消刪除訂單";
        }
    }
</script>

